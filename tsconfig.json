{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "./shims"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}